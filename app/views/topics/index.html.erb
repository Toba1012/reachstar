<div class="topic-index-wrapper">
  <div class="container">
    <%= topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">

            <%= image_tag topic.image.url %>
            
            <p class="topic-text">
              <%= topic.description %>
            </p>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>